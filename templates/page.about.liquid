{% comment %}
  About Us Template for Get Up & Down Golf Shopify Theme
  - Displays brand story, founder information, and company values
{% endcomment %}

<div class="about-us-template section">
  <div class="container">
    {% if section.settings.show_breadcrumbs %}
      <div class="about-breadcrumbs">
        <a href="/" class="about-breadcrumb-link">Home</a>
        <span class="about-breadcrumb-separator">/</span>
        <span class="about-breadcrumb-current">About Us</span>
      </div>
    {% endif %}
    
    <div class="about-header">
      <h1 class="about-title">{{ section.settings.title }}</h1>
      
      {% if section.settings.subtitle != blank %}
        <div class="about-subtitle">{{ section.settings.subtitle }}</div>
      {% endif %}
    </div>
    
    <div class="about-content">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'hero_image' %}
            <div class="about-hero-section" {{ block.shopify_attributes }}>
              {% if block.settings.image != blank %}
                <div class="about-hero-image-wrapper">
                  <img 
                    srcset="{% if block.settings.image.width >= 375 %}{{ block.settings.image | img_url: '375x' }} 375w,{% endif %}
                            {% if block.settings.image.width >= 720 %}{{ block.settings.image | img_url: '720x' }} 720w,{% endif %}
                            {% if block.settings.image.width >= 1080 %}{{ block.settings.image | img_url: '1080x' }} 1080w,{% endif %}
                            {% if block.settings.image.width >= 1500 %}{{ block.settings.image | img_url: '1500x' }} 1500w,{% endif %}
                            {{ block.settings.image | img_url: 'master' }} {{ block.settings.image.width }}w"
                    src="{{ block.settings.image | img_url: '1500x' }}"
                    sizes="100vw"
                    alt="{{ block.settings.image.alt | escape }}"
                    loading="lazy"
                    width="{{ block.settings.image.width }}"
                    height="{{ block.settings.image.height }}"
                    class="about-hero-image"
                  >
                </div>
              {% endif %}
            </div>
            
          {% when 'text_block' %}
            <div class="about-text-section" {{ block.shopify_attributes }}>
              {% if block.settings.heading != blank %}
                <h2 class="about-section-heading">{{ block.settings.heading }}</h2>
              {% endif %}
              
              {% if block.settings.text != blank %}
                <div class="about-section-text rte">
                  {{ block.settings.text }}
                </div>
              {% endif %}
            </div>
            
          {% when 'image_with_text' %}
            <div class="about-image-text-section {% if block.settings.image_position == 'right' %}image-right{% else %}image-left{% endif %}" {{ block.shopify_attributes }}>
              <div class="about-image-text-image">
                {% if block.settings.image != blank %}
                  <img 
                    srcset="{% if block.settings.image.width >= 375 %}{{ block.settings.image | img_url: '375x' }} 375w,{% endif %}
                            {% if block.settings.image.width >= 720 %}{{ block.settings.image | img_url: '720x' }} 720w,{% endif %}
                            {% if block.settings.image.width >= 1080 %}{{ block.settings.image | img_url: '1080x' }} 1080w,{% endif %}
                            {{ block.settings.image | img_url: 'master' }} {{ block.settings.image.width }}w"
                    src="{{ block.settings.image | img_url: '720x' }}"
                    sizes="(min-width: 1200px) 50vw, 100vw"
                    alt="{{ block.settings.image.alt | escape }}"
                    loading="lazy"
                    width="{{ block.settings.image.width }}"
                    height="{{ block.settings.image.height }}"
                    class="about-image-text-img"
                  >
                {% endif %}
              </div>
              
              <div class="about-image-text-content">
                {% if block.settings.heading != blank %}
                  <h2 class="about-section-heading">{{ block.settings.heading }}</h2>
                {% endif %}
                
                {% if block.settings.text != blank %}
                  <div class="about-section-text rte">
                    {{ block.settings.text }}
                  </div>
                {% endif %}
                
                {% if block.settings.button_label != blank and block.settings.button_link != blank %}
                  <a href="{{ block.settings.button_link }}" class="btn btn-primary about-button">
                    {{ block.settings.button_label }}
                  </a>
                {% endif %}
              </div>
            </div>
            
          {% when 'founder_profile' %}
            <div class="about-founder-section" {{ block.shopify_attributes }}>
              <div class="about-founder-header">
                <h2 class="about-section-heading">{{ block.settings.heading | default: 'Meet Our Founder' }}</h2>
              </div>
              
              <div class="about-founder-content">
                <div class="about-founder-image">
                  {% if block.settings.image != blank %}
                    <img 
                      srcset="{% if block.settings.image.width >= 375 %}{{ block.settings.image | img_url: '375x' }} 375w,{% endif %}
                              {% if block.settings.image.width >= 720 %}{{ block.settings.image | img_url: '720x' }} 720w,{% endif %}
                              {% if block.settings.image.width >= 1080 %}{{ block.settings.image | img_url: '1080x' }} 1080w,{% endif %}
                              {{ block.settings.image | img_url: 'master' }} {{ block.settings.image.width }}w"
                      src="{{ block.settings.image | img_url: '720x' }}"
                      sizes="(min-width: 1200px) 50vw, 100vw"
                      alt="{{ block.settings.name | escape }}"
                      loading="lazy"
                      width="{{ block.settings.image.width }}"
                      height="{{ block.settings.image.height }}"
                      class="about-founder-img"
                    >
                  {% endif %}
                </div>
                
                <div class="about-founder-info">
                  {% if block.settings.name != blank %}
                    <h3 class="about-founder-name">{{ block.settings.name }}</h3>
                  {% endif %}
                  
                  {% if block.settings.title != blank %}
                    <div class="about-founder-title">{{ block.settings.title }}</div>
                  {% endif %}
                  
                  {% if block.settings.bio != blank %}
                    <div class="about-founder-bio rte">
                      {{ block.settings.bio }}
                    </div>
                  {% endif %}
                  
                  {% if block.settings.show_social %}
                    <div class="about-founder-social">
                      {% if block.settings.instagram_url != blank %}
                        <a href="{{ block.settings.instagram_url }}" class="about-founder-social-link" target="_blank" rel="noopener" aria-label="Instagram">
                          {% render 'icon-instagram' %}
                        </a>
                      {% endif %}
                      
                      {% if block.settings.twitter_url != blank %}
                        <a href="{{ block.settings.twitter_url }}" class="about-founder-social-link" target="_blank" rel="noopener" aria-label="Twitter">
                          {% render 'icon-twitter' %}
                        </a>
                      {% endif %}
                      
                      {% if block.settings.linkedin_url != blank %}
                        <a href="{{ block.settings.linkedin_url }}" class="about-founder-social-link" target="_blank" rel="noopener" aria-label="LinkedIn">
                          {% render 'icon-linkedin' %}
                        </a>
                      {% endif %}
                    </div>
                  {% endif %}
                </div>
              </div>
            </div>
            
          {% when 'values' %}
            <div class="about-values-section" {{ block.shopify_attributes }}>
              {% if block.settings.heading != blank %}
                <h2 class="about-section-heading">{{ block.settings.heading }}</h2>
              {% endif %}
              
              {% if block.settings.text != blank %}
                <div class="about-values-intro rte">
                  {{ block.settings.text }}
                </div>
              {% endif %}
              
              <div class="about-values-grid">
                {% for i in (1..4) %}
                  {% assign value_heading = 'value_' | append: i | append: '_heading' %}
                  {% assign value_text = 'value_' | append: i | append: '_text' %}
                  {% assign value_icon = 'value_' | append: i | append: '_icon' %}
                  
                  {% if block.settings[value_heading] != blank %}
                    <div class="about-value-item">
                      {% if block.settings[value_icon] != blank %}
                        <div class="about-value-icon">
                          <img 
                            src="{{ block.settings[value_icon] | img_url: '100x' }}"
                            alt="{{ block.settings[value_heading] | escape }}"
                            loading="lazy"
                            width="60"
                            height="60"
                          >
                        </div>
                      {% endif %}
                      
                      <h3 class="about-value-heading">{{ block.settings[value_heading] }}</h3>
                      
                      {% if block.settings[value_text] != blank %}
                        <div class="about-value-text rte">
                          {{ block.settings[value_text] }}
                        </div>
                      {% endif %}
                    </div>
                  {% endif %}
                {% endfor %}
              </div>
            </div>
            
          {% when 'team' %}
            <div class="about-team-section" {{ block.shopify_attributes }}>
              {% if block.settings.heading != blank %}
                <h2 class="about-section-heading">{{ block.settings.heading }}</h2>
              {% endif %}
              
              {% if block.settings.text != blank %}
                <div class="about-team-intro rte">
                  {{ block.settings.text }}
                </div>
              {% endif %}
              
              <div class="about-team-grid">
                {% for i in (1..6) %}
                  {% assign member_image = 'member_' | append: i | append: '_image' %}
                  {% assign member_name = 'member_' | append: i | append: '_name' %}
                  {% assign member_title = 'member_' | append: i | append: '_title' %}
                  {% assign member_bio = 'member_' | append: i | append: '_bio' %}
                  
                  {% if block.settings[member_name] != blank %}
                    <div class="about-team-member">
                      {% if block.settings[member_image] != blank %}
                        <div class="about-team-member-image">
                          <img 
                            src="{{ block.settings[member_image] | img_url: '300x300', crop: 'center' }}"
                            alt="{{ block.settings[member_name] | escape }}"
                            loading="lazy"
                            width="300"
                            height="300"
                            class="about-team-member-img"
                          >
                        </div>
                      {% endif %}
                      
                      <div class="about-team-member-info">
                        <h3 class="about-team-member-name">{{ block.settings[member_name] }}</h3>
                        
                        {% if block.settings[member_title] != blank %}
                          <div class="about-team-member-title">{{ block.settings[member_title] }}</div>
                        {% endif %}
                        
                        {% if block.settings[member_bio] != blank %}
                          <div class="about-team-member-bio rte">
                            {{ block.settings[member_bio] }}
                          </div>
                        {% endif %}
                      </div>
                    </div>
                  {% endif %}
                {% endfor %}
              </div>
            </div>
            
          {% when 'cta' %}
            <div class="about-cta-section" {{ block.shopify_attributes }}>
              <div class="about-cta-content">
                {% if block.settings.heading != blank %}
                  <h2 class="about-cta-heading">{{ block.settings.heading }}</h2>
                {% endif %}
                
                {% if block.settings.text != blank %}
                  <div class="about-cta-text rte">
                    {{ block.settings.text }}
                  </div>
                {% endif %}
                
                {% if block.settings.button_label != blank and block.settings.button_link != blank %}
                  <a href="{{ block.settings.button_link }}" class="btn btn-primary about-cta-button">
                    {{ block.settings.button_label }}
                  </a>
                {% endif %}
              </div>
            </div>
        {% endcase %}
      {% endfor %}
    </div>
  </div>
</div>

