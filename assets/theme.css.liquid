/* Base Styles for Get Up & Down Golf Shopify Theme */

/* Variables */
:root {
  /* Brand Colors */
  --primary-color: {{ settings.primary_color }};
  --secondary-color: {{ settings.secondary_color }};
  --accent-color: {{ settings.accent_color }};
  
  /* Text Colors */
  --text-color: {{ settings.text_color }};
  --heading-color: {{ settings.heading_color }};
  --light-text-color: {{ settings.light_text_color }};
  
  /* Background Colors */
  --background-color: {{ settings.background_color }};
  --light-background-color: {{ settings.light_background_color }};
  --dark-background-color: {{ settings.dark_background_color }};
  
  /* Typography */
  --heading-font: {{ settings.heading_font.family }}, {{ settings.heading_font.fallback_families }};
  --body-font: {{ settings.body_font.family }}, {{ settings.body_font.fallback_families }};
  --heading-size: {{ settings.heading_size }}px;
  --body-size: {{ settings.body_size }}px;
  
  /* Spacing */
  --spacing-unit: 8px;
  --spacing-extra-small: calc(var(--spacing-unit) * 1);
  --spacing-small: calc(var(--spacing-unit) * 2);
  --spacing-medium: calc(var(--spacing-unit) * 3);
  --spacing-large: calc(var(--spacing-unit) * 5);
  --spacing-extra-large: calc(var(--spacing-unit) * 8);
  
  /* Border Radius */
  --border-radius-small: 4px;
  --border-radius-medium: 8px;
  --border-radius-large: 16px;
  
  /* Transitions */
  --transition-short: 0.2s ease-in-out;
  --transition-medium: 0.3s ease-in-out;
  --transition-long: 0.5s ease-in-out;
  
  /* Z-index layers */
  --z-index-dropdown: 100;
  --z-index-sticky: 200;
  --z-index-drawer: 300;
  --z-index-modal: 400;
  --z-index-popup: 500;
}

/* Reset & Base Styles */
*, *::before, *::after {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

html {
  font-size: 62.5%; /* 10px base for easier rem calculations */
  scroll-behavior: smooth;
}

body {
  font-family: var(--body-font);
  font-size: var(--body-size);
  line-height: 1.6;
  color: var(--text-color);
  background-color: var(--background-color);
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  overflow-x: hidden;
}

/* Header Styles */
.site-header {
  background: var(--background-color);
  padding: 1.5rem 0;
  border-bottom: 1px solid rgba(0,0,0,0.1);
  position: relative;
}

.header-wrapper {
  display: flex;
  align-items: center;
  justify-content: space-between;
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 2rem;
}

.header-logo {
  flex: 0 0 auto;
}

.header-logo-image {
  max-height: 60px;
  width: auto;
}

.header-navigation {
  flex: 1 1 auto;
  margin: 0 2rem;
}

.header-menu {
  list-style: none;
  margin: 0;
  padding: 0;
  display: flex;
  justify-content: center;
}

.header-menu-item {
  margin: 0 1.5rem;
  position: relative;
}

.header-menu-link {
  color: var(--text-color);
  text-decoration: none;
  font-size: 1.6rem;
  font-weight: 500;
  padding: 0.5rem 0;
  display: block;
}

.header-menu-link:hover {
  color: var(--primary-color);
}

.header-actions {
  display: flex;
  align-items: center;
  gap: 1.5rem;
}

/* Announcement Bar */
.announcement-bar {
  background: var(--primary-color);
  color: var(--light-text-color);
  text-align: center;
  padding: 1rem;
  font-size: 1.4rem;
}

.announcement-bar__message {
  margin: 0;
}

/* Mobile Menu */
.mobile-menu-toggle {
  display: none;
}

@media screen and (max-width: 768px) {
  .header-navigation {
    display: none;
  }
  
  .mobile-menu-toggle {
    display: block;
  }
  
  .header-menu {
    flex-direction: column;
  }
  
  .header-menu-item {
    margin: 1rem 0;
  }
}

/* Basic Layout */
.container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 2rem;
}

.main-content {
  min-height: 50vh;
  padding: 2rem 0;
}

/* Links and Navigation */
a {
  color: var(--primary-color);
  text-decoration: none;
  transition: color 0.3s ease;
}

a:hover {
  color: var(--accent-color);
}

/* Typography */
h1, h2, h3, h4, h5, h6 {
  font-family: var(--heading-font);
  color: var(--heading-color);
  line-height: 1.2;
  margin-bottom: var(--spacing-medium);
  font-weight: 700;
}

h1 {
  font-size: calc(var(--heading-size) * 1.5);
}

h2 {
  font-size: calc(var(--heading-size) * 1.25);
}

h3 {
  font-size: var(--heading-size);
}

h4 {
  font-size: calc(var(--heading-size) * 0.85);
}

h5 {
  font-size: calc(var(--heading-size) * 0.7);
}

h6 {
  font-size: calc(var(--heading-size) * 0.6);
}

p {
  margin-bottom: var(--spacing-medium);
}

/* Buttons */
.btn {
  display: inline-block;
  padding: var(--spacing-small) var(--spacing-large);
  font-family: var(--heading-font);
  font-weight: 600;
  font-size: 1.6rem;
  text-align: center;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  border-radius: var(--border-radius-small);
  cursor: pointer;
  transition: all var(--transition-short);
  border: none;
  outline: none;
}

.btn-primary {
  background-color: var(--primary-color);
  color: var(--light-text-color);
}

.btn-primary:hover {
  background-color: var(--accent-color);
  color: var(--light-text-color);
}

.btn-secondary {
  background-color: transparent;
  color: var(--primary-color);
  border: 2px solid var(--primary-color);
}

.btn-secondary:hover {
  background-color: var(--primary-color);
  color: var(--light-text-color);
}

/* Form Elements */
input, textarea, select {
  font-family: var(--body-font);
  font-size: 1.6rem;
  padding: var(--spacing-small);
  border: 1px solid #ddd;
  border-radius: var(--border-radius-small);
  width: 100%;
  transition: border-color var(--transition-short);
}

input:focus, textarea:focus, select:focus {
  outline: none;
  border-color: var(--primary-color);
}

label {
  display: block;
  margin-bottom: var(--spacing-extra-small);
  font-weight: 500;
}

/* Grid System */
.grid {
  display: grid;
  grid-template-columns: repeat(12, 1fr);
  grid-gap: var(--spacing-medium);
}

/* Flexbox Utilities */
.flex {
  display: flex;
}

.flex-column {
  flex-direction: column;
}

.flex-wrap {
  flex-wrap: wrap;
}

.justify-start {
  justify-content: flex-start;
}

.justify-center {
  justify-content: center;
}

.justify-end {
  justify-content: flex-end;
}

.justify-between {
  justify-content: space-between;
}

.align-start {
  align-items: flex-start;
}

.align-center {
  align-items: center;
}

.align-end {
  align-items: flex-end;
}

/* Spacing Utilities */
.mt-1 { margin-top: var(--spacing-extra-small); }
.mt-2 { margin-top: var(--spacing-small); }
.mt-3 { margin-top: var(--spacing-medium); }
.mt-4 { margin-top: var(--spacing-large); }
.mt-5 { margin-top: var(--spacing-extra-large); }

.mb-1 { margin-bottom: var(--spacing-extra-small); }
.mb-2 { margin-bottom: var(--spacing-small); }
.mb-3 { margin-bottom: var(--spacing-medium); }
.mb-4 { margin-bottom: var(--spacing-large); }
.mb-5 { margin-bottom: var(--spacing-extra-large); }

.pt-1 { padding-top: var(--spacing-extra-small); }
.pt-2 { padding-top: var(--spacing-small); }
.pt-3 { padding-top: var(--spacing-medium); }
.pt-4 { padding-top: var(--spacing-large); }
.pt-5 { padding-top: var(--spacing-extra-large); }

.pb-1 { padding-bottom: var(--spacing-extra-small); }
.pb-2 { padding-bottom: var(--spacing-small); }
.pb-3 { padding-bottom: var(--spacing-medium); }
.pb-4 { padding-bottom: var(--spacing-large); }
.pb-5 { padding-bottom: var(--spacing-extra-large); }

/* Accessibility */
.visually-hidden {
  position: absolute !important;
  width: 1px !important;
  height: 1px !important;
  padding: 0 !important;
  margin: -1px !important;
  overflow: hidden !important;
  clip: rect(0, 0, 0, 0) !important;
  white-space: nowrap !important;
  border: 0 !important;
}

.skip-to-content-link {
  position: absolute;
  top: -100px;
  left: 0;
  background: var(--primary-color);
  color: var(--light-text-color);
  padding: 1rem;
  z-index: 100;
}

.skip-to-content-link:focus {
  top: 0;
}

/* Responsive Images */
img {
  max-width: 100%;
  height: auto;
  display: block;
}

/* Section Spacing */
.section {
  padding: var(--spacing-extra-large) 0;
}

.section-title {
  text-align: center;
  margin-bottom: var(--spacing-large);
  position: relative;
}

.section-title:after {
  content: '';
  display: block;
  width: 60px;
  height: 3px;
  background-color: var(--accent-color);
  margin: var(--spacing-small) auto 0;
}

/* Animations */
@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.fade-in {
  animation: fadeIn var(--transition-medium);
}

/* Media Queries */
@media screen and (max-width: 1200px) {
  :root {
    --heading-size: calc({{ settings.heading_size }}px * 0.9);
    --body-size: calc({{ settings.body_size }}px * 0.9);
  }
}

@media screen and (max-width: 992px) {
  :root {
    --heading-size: calc({{ settings.heading_size }}px * 0.85);
    --body-size: calc({{ settings.body_size }}px * 0.85);
  }
  
  .container {
    padding: 0 var(--spacing-medium);
  }
  
  .grid {
    grid-template-columns: repeat(6, 1fr);
  }
}

@media screen and (max-width: 768px) {
  :root {
    --heading-size: calc({{ settings.heading_size }}px * 0.8);
    --body-size: calc({{ settings.body_size }}px * 0.8);
  }
  
  .section {
    padding: var(--spacing-large) 0;
  }
}

@media screen and (max-width: 576px) {
  :root {
    --heading-size: calc({{ settings.heading_size }}px * 0.75);
    --body-size: calc({{ settings.body_size }}px * 0.75);
  }
  
  .container {
    padding: 0 var(--spacing-small);
  }
  
  .grid {
    grid-template-columns: 1fr;
  }
}

/* Print Styles */
@media print {
  body {
    background-color: #fff;
    color: #000;
  }
  
  .no-print {
    display: none !important;
  }
}

/* Cart Drawer Styles */
.cart-drawer {
  position: fixed;
  top: 0;
  right: -100%;
  width: 100%;
  max-width: 400px;
  height: 100vh;
  background: var(--background-color);
  z-index: 1000;
  transition: right 0.3s ease-in-out;
  box-shadow: -2px 0 10px rgba(0, 0, 0, 0.1);
}

.cart-drawer.active {
  right: 0;
}

.cart-drawer-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  z-index: 999;
  opacity: 0;
  visibility: hidden;
  transition: opacity 0.3s ease-in-out;
}

.cart-drawer.active .cart-drawer-overlay {
  opacity: 1;
  visibility: visible;
}

.cart-drawer-content {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.cart-drawer-header {
  padding: 1rem;
  border-bottom: 1px solid var(--border-color);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.cart-drawer-title {
  margin: 0;
  font-size: 1.25rem;
  font-weight: 600;
}

.cart-drawer-close {
  background: none;
  border: none;
  padding: 0.5rem;
  cursor: pointer;
  color: var(--text-color);
}

.cart-drawer-items {
  flex: 1;
  overflow-y: auto;
  padding: 1rem;
}

.cart-items {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.cart-item {
  display: flex;
  gap: 1rem;
  padding-bottom: 1rem;
  border-bottom: 1px solid var(--border-color);
}

.cart-item-image img {
  width: 60px;
  height: 60px;
  object-fit: cover;
}

.cart-item-content {
  flex: 1;
}

.cart-item-title {
  margin-bottom: 0.5rem;
}

.cart-item-title a {
  color: var(--text-color);
  text-decoration: none;
  font-weight: 500;
}

.cart-item-variant {
  font-size: 0.875rem;
  color: var(--text-color-light);
  margin: 0;
}

.cart-item-price {
  margin-bottom: 0.5rem;
  font-weight: 500;
}

.quantity-selector {
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.quantity-selector button {
  background: none;
  border: 1px solid var(--border-color);
  width: 24px;
  height: 24px;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
}

.quantity-input {
  width: 40px;
  text-align: center;
  border: 1px solid var(--border-color);
  padding: 0.25rem;
}

.cart-drawer-footer {
  padding: 1rem;
  border-top: 1px solid var(--border-color);
}

.cart-subtotal {
  display: flex;
  justify-content: space-between;
  margin-bottom: 1rem;
  font-weight: 600;
}

.cart-buttons {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.cart-empty {
  text-align: center;
  padding: 2rem 1rem;
}

.cart-empty-icon {
  margin-bottom: 1rem;
  color: var(--text-color-light);
}

.cart-empty-text {
  margin-bottom: 1rem;
  font-weight: 500;
}

/* Search Drawer Styles */
.search-drawer {
  position: fixed;
  top: 0;
  right: -100%;
  width: 100%;
  max-width: 400px;
  height: 100vh;
  background: var(--background-color);
  z-index: 1000;
  transition: right 0.3s ease-in-out;
  box-shadow: -2px 0 10px rgba(0, 0, 0, 0.1);
}

.search-drawer.active {
  right: 0;
}

.search-drawer-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  z-index: 999;
  opacity: 0;
  visibility: hidden;
  transition: opacity 0.3s ease-in-out;
}

.search-drawer.active .search-drawer-overlay {
  opacity: 1;
  visibility: visible;
}

.search-drawer-content {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.search-drawer-header {
  padding: 1rem;
  border-bottom: 1px solid var(--border-color);
}

.search-input-wrapper {
  position: relative;
  display: flex;
  align-items: center;
}

.search-input {
  width: 100%;
  padding: 0.75rem 2.5rem 0.75rem 1rem;
  border: 1px solid var(--border-color);
  border-radius: 4px;
  font-size: 1rem;
}

.search-submit {
  position: absolute;
  right: 0.5rem;
  background: none;
  border: none;
  padding: 0.5rem;
  cursor: pointer;
  color: var(--text-color);
}

.search-drawer-close {
  position: absolute;
  top: 1rem;
  right: 1rem;
  background: none;
  border: none;
  padding: 0.5rem;
  cursor: pointer;
  color: var(--text-color);
}

.search-results {
  flex: 1;
  overflow-y: auto;
  padding: 1rem;
}

.search-results-title {
  font-size: 1rem;
  font-weight: 600;
  margin-bottom: 1rem;
}

.search-results-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
  gap: 1rem;
}

.search-results-list {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.search-result-item {
  border-bottom: 1px solid var(--border-color);
  padding-bottom: 0.5rem;
}

.search-result-link {
  display: flex;
  gap: 1rem;
  text-decoration: none;
  color: var(--text-color);
}

.search-result-image img {
  width: 60px;
  height: 60px;
  object-fit: cover;
}

.search-result-content {
  flex: 1;
}

.search-result-title {
  margin: 0 0 0.25rem;
  font-size: 0.875rem;
  font-weight: 500;
}

.search-result-price {
  margin: 0;
  font-size: 0.875rem;
  color: var(--text-color-light);
}

.search-loading {
  display: none;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 2rem;
}

.search-loading-spinner {
  width: 40px;
  height: 40px;
  border: 3px solid var(--border-color);
  border-top-color: var(--primary-color);
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 1rem;
}

.search-empty {
  display: none;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 2rem;
  text-align: center;
}

.search-empty-icon {
  margin-bottom: 1rem;
  color: var(--text-color-light);
}

.search-empty-text {
  margin: 0 0 0.5rem;
  font-weight: 500;
}

.search-empty-subtext {
  margin: 0;
  color: var(--text-color-light);
  font-size: 0.875rem;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

/* Responsive Styles */
@media screen and (max-width: 768px) {
  .cart-drawer,
  .search-drawer {
    max-width: 100%;
  }
}
